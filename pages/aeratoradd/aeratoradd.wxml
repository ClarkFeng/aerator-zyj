<!--pages/aeratoradd/aeratoradd.wxml-->
<view class="page" xmlns:wx="http://www.w3.org/1999/xhtml">

    <view class="page__bd">
       <view class="weui-cells weui-cells_after-title">
            <view class="weui-cell weui-cell_input">
                
                <view class="weui-cell__bd">
                    <input bindinput="getnameinput" value="{{nameinput}}"  class="weui-input" placeholder="请输入增氧机名称"/>
                </view>
            </view>
            <view class="weui-cell">
                <view class="weui-cell__bd">
                   <textarea value="{{addrinput}}" bindinput='getaddrinput'   class="weui-textarea" placeholder="请输入增氧机描述,以便区分增氧机" style="height: 3.3em" />
                    <view class="weui-textarea-counter">{{length}}/50</view>
                </view>
             </view>
           
       </view>
       <view class="weui-btn-area">
            <button class="weui-btn" type="primary" bindtap="aeratorsave">确定</button>
        </view>
    </view>
</view>
